// Smooth Scroll for navigation links
document.querySelectorAll('nav ul li a').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            window.scrollTo({
                top: target.offsetTop - 70, // offset for sticky header
                behavior: 'smooth'
            });
        }
    });
});

// Back-to-top button
const backToTop = document.createElement('button');
backToTop.textContent = 'â†‘';
backToTop.id = 'backToTop';
document.body.appendChild(backToTop);

backToTop.style.position = 'fixed';
backToTop.style.bottom = '30px';
backToTop.style.right = '30px';
backToTop.style.padding = '10px 15px';
backToTop.style.border = 'none';
backToTop.style.borderRadius = '50%';
backToTop.style.backgroundColor = '#e74c3c';
backToTop.style.color = '#fff';
backToTop.style.fontSize = '18px';
backToTop.style.cursor = 'pointer';
backToTop.style.display = 'none';
backToTop.style.zIndex = '100';

window.addEventListener('scroll', () => {
    backToTop.style.display = window.scrollY > 400 ? 'block' : 'none';
});

backToTop.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
});

// Simple carousel for tourism/culture sections
function initCarousel(sectionId) {
    const container = document.querySelector(`#${sectionId} .card-container`);
    let scrollAmount = 0;
    const scrollStep = 300;

    container.addEventListener('wheel', (e) => {
        e.preventDefault();
        if (e.deltaY > 0) {
            scrollAmount += scrollStep;
        } else {
            scrollAmount -= scrollStep;
        }
        scrollAmount = Math.max(0, Math.min(scrollAmount, container.scrollWidth - container.clientWidth));
        container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
    });
}

// Initialize carousel on tourism and culture sections
initCarousel('tourism');
initCarousel('culture');
// Mobile hamburger menu toggle


hamburger.addEventListener('click', () => {
    navMenu.classList.toggle('active'); // show/hide nav menu
}); const hamburger = document.getElementById('hamburger');
const navMenu = document.querySelector('nav ul');

hamburger.addEventListener('click', () => {
    navMenu.classList.toggle('active');   // show/hide menu
    hamburger.classList.toggle('active'); // animate hamburger to X
});
// Carousel functionality
function initCarouselAuto(sectionId) {
    const container = document.querySelector(`#${sectionId} .card-container`);
    const prevBtn = document.querySelector(`#${sectionId} .prev`);
    const nextBtn = document.querySelector(`#${sectionId} .next`);
    let scrollAmount = 0;
    const cardWidth = container.querySelector('.card').offsetWidth + 20; // card + gap
    const maxScroll = container.scrollWidth - container.clientWidth;

    // Auto-scroll every 4 seconds
    let autoScroll = setInterval(() => {
        scrollAmount += cardWidth;
        if (scrollAmount > maxScroll) scrollAmount = 0;
        container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
    }, 4000);

    // Arrow buttons
    nextBtn.addEventListener('click', () => {
        scrollAmount += cardWidth;
        if (scrollAmount > maxScroll) scrollAmount = 0;
        container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
        resetAutoScroll();
    });

    prevBtn.addEventListener('click', () => {
        scrollAmount -= cardWidth;
        if (scrollAmount < 0) scrollAmount = maxScroll;
        container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
        resetAutoScroll();
    });

    function resetAutoScroll() {
        clearInterval(autoScroll);
        autoScroll = setInterval(() => {
            scrollAmount += cardWidth;
            if (scrollAmount > maxScroll) scrollAmount = 0;
            container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
        }, 4000);
    }
}

// Initialize carousels
initCarouselAuto('tourism');
initCarouselAuto('culture');
initCarouselAuto('language');
initCarouselAuto('cooking');

const heroSection = document.querySelector('.hero');

// List your hero images
const heroImages = [
    'images/hero-bg1.jpg',
    'images/hero-bg2.jpg',
    'images/hero-bg3.jpg'
];

// Create hero background divs
heroImages.forEach((src, index) => {
    const div = document.createElement('div');
    div.classList.add('hero-bg');
    if (index === 0) div.classList.add('active'); // show first image initially
    div.style.backgroundImage = `url(${src})`;
    heroSection.appendChild(div);
});

let currentHero = 0;
const heroDivs = document.querySelectorAll('.hero-bg');

setInterval(() => {
    heroDivs[currentHero].classList.remove('active');
    currentHero = (currentHero + 1) % heroDivs.length;
    heroDivs[currentHero].classList.add('active');
}, 5000); // change image every 5 seconds

const subscribeForm = document.querySelector('.subscribe-form');
subscribeForm.addEventListener('submit', (e) => {
    e.preventDefault();
    const email = subscribeForm.querySelector('input[type="email"]').value;
    alert(`Thank you for subscribing with ${email}!`);
    subscribeForm.reset();
});